model Post {
    fields {
        title Text
        identity Identity?
    }

    actions {
        create createPost() with (title){
            @set(post.identity = ctx.identity)
            @permission(expression: ctx.isAuthenticated)
        }
        list myPosts() {
            @permission(expression: ctx.isAuthenticated)
            @where(post.identity == ctx.identity)
        }
        list allPosts() {
            @permission(expression: true)
        }
    }
}