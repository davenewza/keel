model Profile {
    fields {
        name Text
        identity Identity
    }
}

model Post {
    fields {
        body Text
        profile Profile
    }

    actions {
        create createPost() with (body, profile.name)
    }
}

model Comment {
    fields {
        post Post
    }

    actions {
        create createComment() with (post.body, post.profile.name)
    }
}
