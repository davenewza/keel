model Post {
    fields {
        title Text
    }

    actions {
        list listPosts(
            offset: Number?,
            limit: Number?,
            orderBy: Text?,
            sortOrder: Text?,
        ) {
            @permission(expression: true)
            @function
        }
    }
}

model Profile {
    fields {
        name Text
    }
}

model Follow {
    fields {
        from Profile
        to Profile
    }

    @unique([from, to])
}

model Author {
    fields {
        name Text
        books Book[]
    }
}

model Book {
    fields {
        title Text
        author Author
    }
}

model User {
    fields {
        settings Settings
    }
}

model Settings {
    fields {
        user User @unique
    }
}
