{
  "type": "object",
  "properties": {
    "environment": {
      "type": [ "array", "null" ],
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Z][A-Z0-9_]*$",
            "description": "Must be in upper-snake-case, start with an uppercase letter, and not use the prefixes AWS_, KEEL_, or OTEL_"
          },
          "value": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["name"]
      }
    },
    "secrets": {
      "type": [ "array", "null" ],
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Z][A-Z0-9_]*$",
            "description": "Must be in upper-snake-case, start with an uppercase letter, and not use the prefixes AWS_, KEEL_, or OTEL_"
          }
        },
        "additionalProperties": false,
        "required": ["name"]
      }
    },
    "useDefaultApi": {
      "type": "boolean"
    },
    "auth": {
      "type": [ "object", "null" ],
      "properties": {
        "redirectUrl": {
          "type": "string",
          "format": "uri"
        },
        "tokens": {
          "type": "object",
          "properties": {
            "accessTokenExpiry": {
              "type": "integer",
              "minimum": 1
            },
            "refreshTokenExpiry": {
              "type": "integer",
              "minimum": 1
            },
            "refreshTokenRotationEnabled": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "providers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["google", "facebook", "gitlab", "slack", "oidc"],
                "description": "Valid values are google, facebook, gitlab, slack, oidc"
              },
              "name": {
                "type": "string",
                "pattern": "^[a-zA-Z][a-zA-Z0-9_]+$",
                "description": "Must be lower-case letters and dashes only"
              },
              "clientId": {
                "type": "string"
              },
              "issuerUrl": {
                "type": "string",
                "format": "uri",
                "pattern": "^https://"
              },
              "tokenUrl": {
                "type": "string",
                "format": "uri",
                "pattern": "^https://"
              },
              "authorizationUrl": {
                "type": "string",
                "format": "uri",
                "pattern": "^https://"
              }
            },
            "required": ["type", "name", "clientId"]
          }
        },
        "claims": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string"
              },
              "field": {
                "type": "string"
              },
              "unique": {
                "type": "boolean"
              }
            },
            "required": ["key", "field"]
          }
        },
        "hooks": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["afterAuthentication", "afterIdentityCreated"],
            "description": "Valid values are afterAuthentication and afterIdentityCreated"
          }
        }
      },
      "additionalProperties": false
    },
    "disableKeelAuth": {
      "type": "boolean"
    }
  },

  "additionalProperties": false
}
