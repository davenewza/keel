
model Author {
    fields {
        firstName Text @sortable
        surname Text
    }

    actions {
        create createAuthor() with (firstName, surname) {
            @sortable(firstName, surname)
        }

        list listAuthors() {
            @sortable(firstName)
            @sortable(surname)
        }
    }

    @sortable(surname)

    actions {
        list listAuthorsFn() {
            @sortable(firstName, surname)
        }
    }
}