model Record {
    fields {
        name Text
        owner User?
        parent Record?
        children Record[]
    }

    actions {
        create createRecordWithChildren() with (name, children.name) {
            @set(record.children.owner = ctx.identity.user.records.owner)
        }
    }
}

model User {
    fields {
        identity Identity {
            @unique
            @relation(user)
        }
        records Record[]
    }
}
