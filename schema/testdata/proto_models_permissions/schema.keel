model Foo {
  fields {
    f1 Boolean
  }
 
  @permission(
    expression: foo.f1 == bool,
    roles: [Admin],
    actions: [list, get]
  )
  @permission(
    roles: [Restricted],
    actions: [update]
  )
}

role Admin {
  domains {
    "bar.com"
  }
}

role Restricted {
  emails {
    "superuser@myorg.com"
  }
}