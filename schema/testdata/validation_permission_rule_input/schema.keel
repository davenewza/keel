model Person {
    fields {
        name Text
    }

    operations {
        create createPerson() with (name) {
            @permission(expression: name == "123")
        }
        create createPersonRhsInput() with (name) {
            @permission(expression: "123" == name)
        }
        update updatePerson(id) with (name) {
            @permission(expression: name == "123")
        }
    }
}
