model Foo {
  fields {
    f1 Boolean
  }
  operations {
    list opA() {
      @permission(
          expression: foo.f1 == bool,
          roles: [Admin]
      )
      @permission(
          roles: [Restricted]
      )
    }
  }
}

role Admin {
  domains {
    "myorg.com"
  }
}

role Restricted {
  emails {
    "superuser@myorg.com"
  }
}