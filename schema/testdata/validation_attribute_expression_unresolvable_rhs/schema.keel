model Post {
    fields {
        author Author
        title Text
    }

    actions {
        update updatePost(id) with (title) {
            @set(post.title = title)
        }
    }

    @permission(
        expression: post.author == post.auth,
        actions: [get]
    )
}

model Author {
    fields {
        posts Post[]
    }
}
