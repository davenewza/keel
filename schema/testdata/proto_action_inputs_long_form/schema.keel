model Person {
    fields {
        name Text
    }
    operations {
        get getPerson(personId: id) {
            @where(person.id == personId)
        }
        create createPerson() with(name: Text) {
            @set(person.name = name)
        }
        list listPerson(name: Text) {
            @where(person.name == name)
        }
    }
}