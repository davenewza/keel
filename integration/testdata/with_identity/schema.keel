model Post {
    fields {
        title Text
        identity Identity
    }
    operations {
        create createPost() with (title) {
            @set(post.identity = ctx.identity)
        }
        get getPost(id) {
            @permission(expression: ctx.identity == post.identity)
        }
    }
}

api Web {
    @graphql

    models {
        Post
    }
}