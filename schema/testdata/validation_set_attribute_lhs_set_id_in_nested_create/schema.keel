model Post {
    fields {
        name Text?
        published Boolean?
        identity Identity?
        publisher Publisher?
    }

    actions {
        create nestedData1() with (
            publisher.departments.name,
            publisher.departments.number,
        ) {
            @set(post.publisher.id = ctx.identity.publisher.id)
        }
        create nestedData2() with (
            publisher.departments.head.name,
        ) {
            @set(post.publisher.departments.head.id = ctx.identity.person.id)
        }
        create nestedData3() with (
            name, 
            publisher.name
        ) {
            @set(post.publisher.id = ctx.identity.publisher.id)
        }
        create nestedData4() with (
            name, 
            publisher.name
        ) {
            @set(post.publisher = ctx.identity.publisher)
        }
        create nestedData5() with (
            name, 
            publisher.name
        ) {
            @set(post.publisher = null)
        }
        create nestedData6() with (
            name, 
            publisher.id
        ) {
            @set(post.publisher = ctx.identity.publisher)
        }
    }
}

model Publisher {
    fields {
        name Text
        owner Person
        departments Department[]
        country Country
        admin Identity @unique
    }
}

model Department {
    fields {
        publisher Publisher
        head Person?
        name Text
        number Text
    }
}

model Country {
    fields {
        name Text?
        publishersCount Number?
    }
}

model Person {
    fields {
        name Text
        identity Identity @unique
    }
}
