model Address {
    fields {
        addressLine1 Text?
    }
}

model Customer {
    fields {
        name Text?
        dateOfBirth Date?
        address Address?
    }

    actions {
        get getCustomer(id)
        create createCustomer() with (
            name,
            dateOfBirth,
            address.addressLine1
        )
        update updateCustomer(id) with (name, dateOfBirth)
        list customers(name, address.addressLine1)
    }
}

api Web {
    models {
        Customer
    }
}
