model Order {
  fields {
    customer Customer
  }

  @permission(
    expression:
      order.customer.address.firstLine == "123 Fake Street"
      or
      (
        order.customer.address.secondLine == "Fake Town"
        and
        order.customer.address.postCod == "ABC123"
      ),
    actions: [get]
  )
}

model Customer {
  fields {
    name Text
    address Address
  }
}

model Address {
  fields {
    firstLine Text
    secondLine Text
    postCode Text
  }
}